    <defaultGoal>install</defaultGoal>
    <resources>
      <resource>
        <directory>src/main/resources/</directory>
        <includes>
          <include>**/*</include>
        </includes>
        <excludes>
          <exclude>env/*/*</exclude>
        </excludes>
